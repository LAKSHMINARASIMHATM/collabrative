{
    "name": "@codesync/ide",
    "version": "1.0.0",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:validation": "jest file-validator.test.ts"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "roots": [
            "<rootDir>/lib"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "lib/**/*.ts",
            "!lib/**/*.d.ts",
            "!lib/**/__tests__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "ts-jest": "^29.1.1"
    }
}